{
    "compilerOptions": {
        "composite": true,
        "rootDir": "..",
        "outDir": "../../dist",
        "skipLibCheck": true,
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",

        // Overrides
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        // Workspace paths
        "paths": {
            "@rpgk/core": ["../../packages/core/src/index.ts"],
            "@rpgk/core/*": ["../../packages/core/src/*"],
            "@rpgk/systems": ["../../packages/systems/src/index.ts"],
            "@rpgk/systems/*": ["../../packages/systems/src/*"],
            "@client/*": ["./*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.vue",
        "components.d.ts"
    ],
    "references": [
        { "path": "../../packages/core" }
    ]
}
