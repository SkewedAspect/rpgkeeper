{
    "compilerOptions": {
        "composite": true,
        "rootDir": "..",
        "outDir": "../../dist",
        "skipLibCheck": true,
        "target": "ES2022",
        "module": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",

        // Overrides
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [
        "../common/**/*.ts",
        "**/*.ts",
        "**/*.vue",
        "components.d.ts"
    ]
}
