{
    "compilerOptions": {
        "composite": true,
        "rootDir": "..",
        "outDir": "../../dist",
        "skipLibCheck": true,
        "target": "ES2022",
        "module": "ES2022",

        // Overrides
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",
//        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [
        "../common/**/*.ts",
        "**/*.ts",
        "**/*.vue",
    ]
}
