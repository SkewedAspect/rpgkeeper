{
    "compilerOptions": {
        "composite": true,
        "target": "ES2023",
        "rootDir": "..",
        "outDir": "../../dist",
        "skipLibCheck": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        // Overrides
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
    },
    "files": [
        "./server.ts",
        "express-shim.d.ts"
    ],
    "include": [
        "../common/**/*.ts",
        "**/*.ts",
    ]
}
