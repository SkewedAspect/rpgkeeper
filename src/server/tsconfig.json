{
    "compilerOptions": {
        "composite": true,
        "target": "ES2023",
        "rootDir": "..",
        "outDir": "../../dist",
        "skipLibCheck": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        // Overrides
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,

        // Workspace paths
        "paths": {
            "@rpgk/core": ["../../packages/core/src/index.ts"],
            "@rpgk/core/*": ["../../packages/core/src/*"]
        }
    },
    "files": [
        "./server.ts",
        "express-shim.d.ts"
    ],
    "include": [
        "**/*.ts"
    ],
    "references": [
        { "path": "../../packages/core" }
    ]
}
