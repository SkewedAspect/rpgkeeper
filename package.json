{
  "name": "rpgkeeper",
  "version": "3.0.0-rc.1",
  "description": "A site for managing your digital character sheets.",
  "main": "server.js",
  "scripts": {
    "start": "npm run build:server && DEBUG=true node ./dist/server.js",
    "build:server": "tsc",
    "build:distclean": "rimraf dist/* .cache",
    "build:clean": "rimraf dist/*",
    "build:copy": "cpr client/static/ dist/client/static",
    "build:release": "npm run build:distclean && npm run build:copy && parcel build client/index.html --out-dir dist/client --detailed-report --no-minify",
    "build:watch": "npm run build:clean && npm run build:copy && parcel watch client/index.html --out-dir dist/client",
    "lint:fix": "eslint --ext *.ts,.js,.vue --fix server.ts config.ts server/ client/",
    "pre-commit": "lint-staged",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": "Morgul/rpgkkeper",
  "author": "Christopher S. Case <chris.case@g33xnexus.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "base62": "^2.0.0",
    "body-parser": "^1.19.0",
    "codemirror": "^5.59.2",
    "connect-session-knex": "^2.0.0",
    "cookie-parser": "^1.4.3",
    "decoders": "^1.23.3",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^4.4.1",
    "knex": "^0.21.1",
    "lodash": "^4.17.19",
    "mailgun": "^0.5.0",
    "passport": "^0.4.0",
    "passport-google-web": "^1.0.0",
    "rpgdicejs": "^2.0.0-rc.2",
    "socket.io": "^3.1.1",
    "sqlite3": "^5.0.0",
    "trivial-logging": "^2.0.0",
    "trivialperms": "^1.0.0",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@fortawesome/fontawesome-svg-core": "^1.2.21",
    "@fortawesome/free-brands-svg-icons": "^5.10.1",
    "@fortawesome/pro-regular-svg-icons": "^5.10.1",
    "@fortawesome/pro-solid-svg-icons": "^5.10.1",
    "@fortawesome/vue-fontawesome": "2",
    "@types/express": "^4.17.6",
    "@types/lodash": "^4.14.157",
    "@types/node": "^14.0.14",
    "@types/passport": "^1.0.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "@vue/component-compiler-utils": "^3.1.2",
    "autoprefixer": "^9.7.6",
    "bootstrap": "^4.2.1",
    "bootstrap-vue": "^2.13.1",
    "browserslist": "^4.16.3",
    "caniuse-lite": "1.0.30001187",
    "cpr": "^3.0.1",
    "date-fns": "^2.13.0",
    "eslint": "^7.12.1",
    "eslint-plugin-jsdoc": "^32.0.0",
    "eslint-plugin-vue": "^7.1.0",
    "husky": "5",
    "jquery": "^3.5.1",
    "lint-staged": "^10.2.2",
    "marked": "^4.0.10",
    "parcel": "^1.11.0",
    "pino-pretty": "^4.0.0",
    "pinst": "^2.1.4",
    "popper.js": "^1.14.6",
    "postcss-preset-env": "^6.7.0",
    "precss": "^4.0.0",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.5",
    "sass": "^1.26.5",
    "socket.io-client": "^3.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "vue": "^2.6.11",
    "vue-codemirror": "4.0.5",
    "vue-color": "^2.7.0",
    "vue-hot-reload-api": "^2.3.1",
    "vue-router": "^3.1.5",
    "vue-rx": "6.0.1",
    "vue-template-compiler": "^2.6.11",
    "vue-typeahead-bootstrap": "^2.1.2",
    "vuelidate": "^0.7.6"
  },
  "resolutions": {
    "browserslist": "^4.16.2",
    "caniuse-lite": "^1.0.30001129"
  },
  "lint-staged": {
    "*.{ts,js,vue}": "yarn run lint:fix"
  }
}
