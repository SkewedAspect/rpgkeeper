    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "unplugin-vue-components": "^0.27.5",
    "vite": "^6.3.5",
    "vite-plugin-checker": "^0.9.3",
    "vue": "^3.5.16",
    "vue-codemirror": "^6.1.1",
    "vue-eslint-parser": "^10.1.0",
    "vue-router": "^4.5.1",
    "vue-tsc": "^2.2.10"
  },
  "overrides": {
    "zod-express": {
      "express": "$express"
    }
  },
  "lint-staged": {
    "*.{ts,js,vue}": "npm run lint"
  }
}
