    "vite": "^5.4.8",
    "vue": "^3.5.10",
    "vue-codemirror": "^6.1.1",
    "vue-router": "^4.4.5"
  },
  "overrides": {
    "zod-express": {
      "express": "$express"
    }
  },
  "lint-staged": {
    "*.{ts,js,vue}": "npm run lint"
  }
}
