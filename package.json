{
  "name": "rpgkeeper",
  "version": "3.3.0-alpha.0",
  "description": "A site for managing your digital character sheets.",
  "main": "dist/server/server.js",
  "scripts": {
    "start": "node ./dist/server/server.js",
    "dev": "tsc --build && DEBUG=true node ./dist/server/server.js --dev",
    "build": "tsc --build && vite build",
    "db:migrate": "knex migrate:latest",
    "db:setup": "knex migrate:latest && knex seed:run",
    "lint": "eslint --ext .ts,.js,.vue src/",
    "prepare": "if-env NODE_ENV=production && exit 0 || husky install"
  },
  "repository": "Morgul/rpgkkeper",
  "author": "Christopher S. Case <chris.case@g33xnexus.com>",
  "license": "MIT",
  "dependencies": {
    "@strata-js/util-config": "^0.8.4",
    "@strata-js/util-logging": "^1.4.2",
    "axios": "^1.7.7",
    "better-sqlite3": "^11.3.0",
    "body-parser": "^1.20.3",
    "connect-session-knex": "^5.0.0",
    "cookie-parser": "^1.4.6",
    "decoders": "^1.23.3",
    "dotenv": "^16.4.5",
    "express": "^5.0.0-beta.3",
    "express-session": "^1.18.0",
    "helmet": "^8.0.0",
    "if-env": "^1.0.4",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "mailgun": "^0.5.0",
    "nanoid": "^3.3.6",
    "nanoid-dictionary": "^4.3.0",
    "p-map": "^4.0.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-google-web": "^1.1.0",
    "rpgdicejs": "^2.0.3",
    "socket.io": "^4.8.0",
    "trivialperms": "^2.0.0",
    "ts-essentials": "^10.0.2",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@ckpack/vue-color": "^1.6.0",
    "@codemirror/lang-markdown": "^6.3.0",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-brands-svg-icons": "^6.6.0",
    "@fortawesome/pro-regular-svg-icons": "^6.6.0",
    "@fortawesome/pro-solid-svg-icons": "^6.6.0",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@morgul/vue-bootstrap-autocomplete": "^3.0.0-beta.0",
