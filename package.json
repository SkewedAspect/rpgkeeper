{
  "name": "rpgkeeper",
  "version": "3.3.0-alpha.0",
  "description": "A site for managing your digital character sheets.",
  "private": true,
  "type": "module",
  "main": "src/server/src/server.ts",
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "start": "node ./src/server/src/server.ts",
    "dev": "DEBUG=true node ./src/server/src/server.ts --dev",
    "build": "vite build",
    "db:migrate": "knex migrate:latest",
    "db:setup": "knex migrate:latest && knex seed:run",
    "db:build-static": "npm run build:static-db --workspace=@rpgk/systems",
    "lint": "npm run lint --workspaces --if-present",
    "lint:types": "npm run lint:types --workspaces --if-present",
    "prepare": "if-env NODE_ENV=production && exit 0 || husky",
    "test": "tsx node_modules/mocha/bin/mocha \"tests/{core,server,systems}/**/*.spec.ts\"",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui"
  },
  "repository": "Morgul/rpgkeeper",
  "author": "Christopher S. Case <chris.case@g33xnexus.com>",
  "license": "MIT",
  "dependencies": {
    "@strata-js/util-config": "^0.8.4",
    "@strata-js/util-logging": "^1.4.2",
    "axios": "^1.9.0",
    "better-sqlite3": "^12.5.0",
    "connect-session-knex": "^5.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.0",
    "helmet": "^8.1.0",
    "if-env": "^1.0.4",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "nanoid": "^5.1.5",
    "nanoid-dictionary": "^5.0.0",
    "p-map": "^7.0.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-google-web": "^1.1.0",
    "pkg-dir": "^8.0.0",
    "rpgdicejs": "^2.0.3",
    "socket.io": "^4.8.0",
    "trivialperms": "^2.0.0",
    "ts-essentials": "^10.0.4",
    "zod": "^4.2.1",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@ckpack/vue-color": "^1.6.0",
    "@codemirror/lang-markdown": "^6.3.2",
    "@eslint/js": "^9.28.0",
    "@floating-ui/vue": "^1.1.6",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/pro-regular-svg-icons": "^7.1.0",
    "@fortawesome/pro-solid-svg-icons": "^7.1.0",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@morgul/vue-bootstrap-autocomplete": "^3.0.0-beta.0",
    "@playwright/test": "^1.57.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chai": "^5.2.3",
    "@types/cookie-parser": "^1.4.10",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.2",
    "@types/express-session": "^1.18.2",
    "@types/lodash": "^4.17.17",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.17",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "@vueuse/core": "^14.1.0",
    "bootstrap": "^5.3.6",
    "bootstrap-vue-next": "^0.42.0",
    "chai": "^6.2.2",
    "codemirror": "^6.0.1",
    "eslint": "^9.28.0",
    "eslint-formatter-junit": "^9.0.1",
    "eslint-plugin-vue": "^10.1.0",
    "fast-xml-parser": "^5.3.3",
    "git-last-commit": "^1.0.1",
    "glob": "^11.0.0",
    "globals": "^16.2.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.0",
    "marked": "^17.0.1",
    "mocha": "^11.7.5",
    "pinia": "^3.0.2",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "sass": "^1.89.1",
    "simple-git": "^3.30.0",
    "socket.io-client": "^4.8.0",
    "tsx": "^4.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^7.3.0",
    "vite-plugin-checker": "^0.12.0",
    "vue": "^3.5.10",
    "vue-codemirror": "^6.1.1",
    "vue-eslint-parser": "^10.1.0",
    "vue-router": "^4.5.1",
    "vue-tsc": "^3.2.1",
    "yaml": "^2.8.1"
  },
  "overrides": {
    "zod-express": {
      "express": "$express"
    }
  },
  "lint-staged": {
    "*.{ts,js,vue}": "eslint --max-warnings=0"
  }
}
