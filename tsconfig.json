{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [ "ES2023" ],
        "skipLibCheck": true,
        "useDefineForClassFields": true,
        "declaration": false,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "jsx": "preserve",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Workspace paths */
        "paths": {
            "@rpgk/core": ["./packages/core/src/index.ts"],
            "@rpgk/core/*": ["./packages/core/src/*"],
            "@rpgk/systems": ["./packages/systems/src/index.ts"],
            "@rpgk/systems/*": ["./packages/systems/src/*"],
            "@client/*": ["./src/client/*"]
        }
    },
    "include": [
        "src",
        "vite.config.ts"
    ],
    "references": [
        { "path": "./packages/core" },
        { "path": "./packages/systems" },
        { "path": "./src/server/tsconfig.json" },
        { "path": "./src/client/tsconfig.json" }
    ]
}
