{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [ "ES2023" ],
        "skipLibCheck": true,
        "useDefineForClassFields": true,
        "declaration": false,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "noEmit": true,
        "jsx": "preserve",
        "allowImportingTsExtensions": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Workspace paths */
        "paths": {
            "@rpgk/core": ["./packages/core/src/index.ts"],
            "@rpgk/core/*": ["./packages/core/src/*"],
            "@rpgk/systems": ["./packages/systems/src/index.ts"],
            "@rpgk/systems/*": ["./packages/systems/src/*"],
            "@client/*": ["./packages/client/src/*"],
            "@server/*": ["./packages/server/src/*"]
        }
    },
    "include": [
        "vite.config.ts",
        "knexfile.ts"
    ]
}
