{
  "name": "@rpgk/systems",
  "version": "1.0.0",
  "description": "RPG system definitions and Vue components for RPGKeeper",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts"
    },
    "./definitions": {
      "types": "./dist/definitions.d.ts",
      "import": "./dist/definitions.js"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@rpgk/core": "*"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "rimraf": "^6.0.1"
  }
}
