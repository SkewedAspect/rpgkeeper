{
  "name": "@rpgk/core",
  "version": "1.0.0",
  "description": "Core domain models and types for RPGKeeper",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./models": {
      "types": "./dist/models/index.d.ts",
      "import": "./dist/models/index.js"
    },
    "./models/*": {
      "types": "./dist/models/*.d.ts",
      "import": "./dist/models/*.js"
    },
    "./models/systems": {
      "types": "./dist/models/systems/index.d.ts",
      "import": "./dist/models/systems/index.js"
    },
    "./models/systems/*": {
      "types": "./dist/models/systems/*.d.ts",
      "import": "./dist/models/systems/*.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "rpgdicejs": "^2.0.3"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2"
  }
}
